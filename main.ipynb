# Imports
from stock import Stock
from portfolio import Portfolio

# Create stocks
print("Creating Stocks")
apple = Stock("AAPL")
microsoft = Stock("MSFT")
print(apple)
print(f"Prediction: {apple.predict_change()}")

# Create portfolio
print("Portfolio")
portfolio = Portfolio()
portfolio.add_stock("AAPL")
portfolio.add_stock("MSFT")
portfolio.add_stock("GOOGL")
print(portfolio)

# Visualize
portfolio.visualize()

# List comprehension
tickers = [s.ticker for s in portfolio.stocks]
print(f"\nTickers: {tickers}")

# Lambda + map
prices = list(map(lambda s: s.current_price, portfolio.stocks))
print(f"Prices: {prices}")

# Generator
def stock_info(portfolio):
    for stock in portfolio.stocks:
        yield f"{stock.ticker}: ${stock.current_price:.2f}"

for info in stock_info(portfolio):
    print(info)

# Operator overloading (+)
portfolio2 = Portfolio()
portfolio2.add_stock("TSLA")
merged = portfolio + portfolio2
print(f"\nMerged: {merged}")

i = 0
while i < len(portfolio.stocks):
    stock = portfolio.stocks[i]
    print(f"{stock.ticker}: {stock.predict_change()}")
    i += 1

print("Stock Analysis")
for idx, stock in enumerate(portfolio.stocks, 1):
    print(f"{idx}. {stock}")


for stock in portfolio.stocks:
    if stock.predict_change() == "^":
        print(f"✓ {stock.ticker} - Buy")
    elif stock.predict_change() == "⌄":
        print(f"✗ {stock.ticker} - Sell")
    else:
        print(f"→ {stock.ticker} - Hold")
